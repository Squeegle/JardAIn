# Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=JardAIn Garden Planner
DEBUG=true
LOG_LEVEL=info

# LLM Provider Configuration
# Options: "ollama" for local development, "openai" for production
LLM_PROVIDER=ollama

# OpenAI Configuration (for production)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# Weather/Location API
# Get free API key from weatherapi.com
WEATHER_API_KEY=your_weather_api_key_here

# File Paths
PLANT_DATA_PATH=data/common_vegetables.json
PLANT_IMAGES_PATH=data/plant_images/
GENERATED_PLANS_PATH=generated_plans/

# PDF Generation Settings
PDF_PAGE_SIZE=A4
PDF_MARGIN=1in

# Database (if we add one later)
# DATABASE_URL=sqlite:///./garden_planner.db

# CORS Settings (for production)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]